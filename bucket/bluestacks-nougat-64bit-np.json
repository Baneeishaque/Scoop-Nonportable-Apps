    "installer": {
        "script": [
            "if (!(is_admin)) { \"$app requires admin rights to $cmd\"; break }",
            "Start-Process -Wait \"$dir\\setup.exe\" \"--defaultImageName Nougat64 --imageToLaunch Nougat64 -s\" -Verb RunAs",
